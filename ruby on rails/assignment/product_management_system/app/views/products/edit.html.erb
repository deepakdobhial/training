<div class="index-link" >
  <%= link_to "Product List", {controller: :products, action: :index} %>
  <%= link_to "Signout", {controller: :users, action: :signout} %> <br><br>
</div>

<% if @product.errors.any? %>
  <div style="color: red; text-align: justify; text-align-last: center">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @product.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 

<div class="new-product">
  <h2 style="color: #0f52ba"> Update Product </h2>
  <%= form_for @product, url: "../update/#{@product.id}", method: :patch do |f| %>
    <%= f.label :name, class: "product_label" %>
    <%= f.text_field :name, class: "product-field" %> <br> <br>
    <%= f.label :price, class: "product_label" %>
    <%= f.number_field :price, class: "product-field"%> <br> <br>
    <%= f.submit "Update Product", class: "button" %>
  <% end %>
</div>