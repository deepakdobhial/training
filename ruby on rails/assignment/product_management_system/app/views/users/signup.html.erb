<div class="index-link">
  <%= link_to "Register",{controller: "users", action: "signup"} %>
  <%= link_to "Signin", {controller: "home", action: "index"} %> <br> <br>
</div>

<% if @user.errors.any? %>
  <div style="color: red; text-align: center">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class= "signup-form">
  <fieldset class= "signup-fieldset">
    <%= form_for @user, url: "create" , method: :post do |f| %>
      <legend style="font-size: 26px; font-weight: bold"> Sign up </legend>
      <%= f.label :name, "User", class: "signup-label" %>
      <%= f.text_field :name, class: "signup-field" %> <br><br>
      <%= f.label :password, class: "signup-label" %>
      <%= f.password_field :password, class: "signup-field" %><br><br>
      <%= f.label :confirm_password, class: "signup-label" %>
      <%= f.password_field :password_confirmation, class: "signup-field" %><br><br>
      <%= f.label :date_of_birth, class: "signup-label" %>
      <%= f.date_field :date_of_birth, class: "signup-field"%> <br><br>
      <%= f.label :address, class: "signup-label" %>
      <%= f.text_area :address, class: "signup-field"%> <br> <br>
      <%= f.label :email, class: "signup-label" %>
      <%= f.email_field :email, class: "signup-field" %> <br> <br>
      <%= f.check_box :terms_of_services, class: "checkbox" %> I accept terms and conditions <br> <br>
      <%= f.submit "Sign up", class: "button" %> <br> 
    <% end %>
    <div class="gmail_sign" >
      <%= link_to "Sign up with google", '/auth/google_oauth2' %>
    </div>
  </fieldset>
</div>